# Snyk Configuration File
# Defines ignore rules and policies for vulnerability scanning

# Language settings
language-settings:
  javascript:
    # Include dev dependencies in scanning
    includeDevDeps: true

# Patch settings  
patch:
  # Apply patches for medium and above vulnerabilities
  'SNYK-JS-*':
    - '*':
        reason: 'Automatically applying security patches'
        expires: '2026-01-01T00:00:00.000Z'

# Ignore rules for known false positives or accepted risks
ignore:
  # Example: Ignore specific vulnerability in development dependencies
  # 'SNYK-JS-LODASH-567746':
  #   - '*':
  #       reason: 'Dev dependency, not used in production'
  #       expires: '2025-12-31T23:59:59.999Z'

# Severity thresholds
severity-threshold: medium

# File patterns to exclude from scanning
exclude:
  # Build outputs
  - dist/**
  - build/**
  - out/**
  
  # Dependencies
  - node_modules/**
  
  # Test files (optional - remove if you want to scan tests)
  - '**/*.test.js'
  - '**/*.test.ts'
  - '**/*.spec.js'
  - '**/*.spec.ts'
  - '__tests__/**'
  - '**/__mocks__/**'
  
  # Configuration files that might contain secrets
  - '.env*'
  - '*.key'
  - '*.pem'
  - '*.p12'
  
  # Documentation
  - '**/*.md'
  - 'docs/**'
  
  # IDE and editor files
  - '.vscode/**'
  - '.idea/**'
  - '*.swp'
  - '*.swo'

# Include rules (override excludes for specific patterns)
include: []

# Custom rules and policies can be defined here
# This requires Snyk Enterprise features
