# NPM Configuration for Weather App
# Ensures optimal dependency installation, especially for optional dependencies like Rollup binaries

# Include optional dependencies by default
optional=true

# Prefer offline packages when available to speed up CI
prefer-offline=true

# Use exact versions for reproducible builds
save-exact=false

# Always include development dependencies
dev=true

# Enable fund messages for transparency
fund=true

# Enable audit level for security
audit-level=moderate

# Configure registry (default is fine)
registry=https://registry.npmjs.org/

# Package lock configuration
package-lock=true
package-lock-only=false

# Progress configuration for CI environments
progress=false

# Engine strict to ensure Node.js version compatibility
engine-strict=true
