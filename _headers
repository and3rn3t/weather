# Cloudflare Pages Configuration
# https://developers.cloudflare.com/pages/

# Build configuration
[build]
  command = "npm run build"
  publish = "dist"

# Build environment variables
[build.environment]
  NODE_VERSION = "22"
  NPM_FLAGS = "--version"

# Headers for better performance and security
[[headers]]
  for = "/*"
  [headers.values]
    # Security headers
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    X-XSS-Protection = "1; mode=block"
    Referrer-Policy = "strict-origin-when-cross-origin"
  # Performance headers (set broadly but overridden for HTML below)
  Cache-Control = "public, max-age=31536000, immutable"

# Specific headers for index.html
[[headers]]
  for = "/index.html"
  [headers.values]
  # Never cache the shell HTML so updates propagate
  Cache-Control = "no-cache, no-store, must-revalidate"

# Headers for API calls (if needed)
[[headers]]
  for = "/api/*"
  [headers.values]
    Cache-Control = "no-cache, no-store, must-revalidate"

## Note: SPA routing should be configured in wrangler/pages project settings.
## Avoid in-file catch-all redirects that can rewrite asset URLs to /index.html.

# Functions configuration (if needed for future API endpoints)
[functions]
  directory = "functions"
